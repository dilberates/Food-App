<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailFragment"
    android:background="@drawable/detail">

    <LinearLayout
        android:layout_width="330dp"
        android:layout_height="487dp"
        android:background="@drawable/rounder"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints">

        <ImageView
            android:id="@+id/pictureAdd"
            android:layout_width="match_parent"
            android:layout_height="151dp"
            android:layout_margin="10dp"
            android:onClick="imageAdd"
            android:src="@drawable/picture"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.433"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.21" />

        <EditText
            android:id="@+id/nameTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:ems="14"
            android:hint="Yemek Adı"
            android:inputType="textPersonName"
            tools:layout_editor_absoluteX="99dp"
            tools:layout_editor_absoluteY="335dp" />

        <EditText
            android:id="@+id/materialasTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:ems="14"
            android:hint="Yemek Malzemeleri"
            android:inputType="textPersonName"
            tools:layout_editor_absoluteX="94dp"
            tools:layout_editor_absoluteY="403dp" />

        <EditText
            android:id="@+id/preparationTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:ems="14"
            android:gravity="start|top"
            android:hint="Hazırlanışı"
            android:inputType="textMultiLine" />

        <Button
            android:id="@+id/createBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:onClick="saveBtn"
            android:text="KAYDET" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>